{
    "files.associations": {
        "tongxin_xieyi_ctrl.h": "c",
        "led_ctrl.h": "c",
        "adc_chk.h": "c",
        "main.h": "c",
        "typeinfo": "c",
        "*.h": "c",
        "*.c": "c",
        "*.s": "asm",
        "*.ld": "ld",
        "*.bak": "c"
    },
    "C_Cpp.errorSquiggles": "enabled",
    "C_Cpp.intelliSenseEngine": "default",
    "C_Cpp.autocomplete": "default",
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "editor.detectIndentation": false,

    // ğŸ¯ ä¿å­˜æ—¶è‡ªåŠ¨æ ¼å¼åŒ–è®¾ç½®
    "editor.formatOnSave": true,
    "editor.formatOnType": false,
    "editor.formatOnPaste": true,
    "editor.defaultFormatter": "xaver.clang-format",

    // C/C++ æ ¼å¼åŒ–è®¾ç½®
    "C_Cpp.formatting": "clangFormat",
    "C_Cpp.clang_format_style": "file",
    "C_Cpp.clang_format_fallbackStyle": "LLVM",
    // Make sure C/C++ files use clang-format as default formatter explicitly
    "[c]": {
        "editor.defaultFormatter": "xaver.clang-format"
    },
    "[cpp]": {
        "editor.defaultFormatter": "xaver.clang-format"
    },
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,

    // ç¦ç”¨clangdä»¥é¿å…ä¸Microsoft C/C++æ‰©å±•å†²çª
    "clangd.enabled": false,
    "clangd.onConfigChanged": "ignore",

    // Vim æ‰©å±•é…ç½® - æ­£ç¡®é…ç½®å‰ªè´´æ¿
    "vim.useSystemClipboard": true,
    "vim.useCtrlKeys": true,
    "vim.hlsearch": true,
    "vim.handleKeys": {
        "<C-a>": false,
        "<C-c>": false,
        "<C-v>": false,
        "<C-x>": false
    },
    "vim.insertModeKeyBindings": [
        {
            "before": ["j", "j"],
            "after": ["<Esc>"]
        }
    ],
    "vim.leader": "<space>",

    "cortex-debug.enableTelemetry": false,
    "cortex-debug.showRTOS": false,
    "cmake.buildDirectory": "${workspaceFolder}/build",
    "cmake.configureOnOpen": false,
    "C_Cpp.default.configurationProvider": "ms-vscode.cmake-tools",
    "cortex-debug.armToolchainPath": "/usr/bin",
    "cortex-debug.gdbPath": "/usr/bin/gdb-multiarch",
    "cortex-debug.variableUseNaturalFormat": false,
    "idf.pythonInstallPath": "/usr/bin/python3"
}
